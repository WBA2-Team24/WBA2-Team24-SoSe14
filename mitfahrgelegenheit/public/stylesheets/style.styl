/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

main-color = #3D4F5D
back_box_grey = #878787
background-color = #fff
content-background = #e0e0e0
search-color = #65A706
offer-color = #B75901

body
  font-family 'Source Sans Pro'
  background-color background-color
  color #444
  height:100%
  width: 940px
  margin: 0 auto
  box-shadow(2px 2px 2px main-color)

header
  font-family 'Quicksand'
  height 80px
  padding 20px 10px 20px 100px
  color #fff
  font-size 18px
  border-bottom 1px solid #000
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  box-shadow(2px 2px 2px main-color)
  

  h1
    display inline
    font-size 25px
    padding 15px


  a
    font-size 13px
    color inherit
    text-decoration none
    margin 20px
    padding 15px
    font-weight bold
    float left
    &:hover
        color #454545
        transition-duration(400ms)
      

      &:active 
        color #454545
        transition-duration(400ms)
      
  .suche
    background-color search-color
    background: linear-gradient(top, #ffbc02,#ff7902);
    display inline-block
    text-align center
    border-radius(5px)

  .angebot
    background-color offer-color
    background: linear-gradient(top, #b9da01,#89c131);
    display inline-block
    text-align center
    border-radius(5px)

section
  padding 20px 0px
  background: linear-gradient(top, content-background, #959595);
  width 100%
  height 100%
  margin-bottom 20px
  box-shadow(2px 2px 2px main-color)

  .content
    padding 60px 0px 20px 40px

  .search-form
    padding 15px 15px 15px 40px
    float left

    input[type=text]
        padding 4px 6px
        margin-left 5px
        width 200px
        float left

    .find_button
      float left
      padding 4px 6px
      background linear-gradient(top, #ffbc02,#ff7902);
      border-radius(5px)

  .createFahrt
    input[type=text]
        padding 4px 6px
        margin-left 5px
        width 200px

  table
    margin-left 30px 
    padding 10px
    th
      padding-left 40px
    tr
      padding-top 5px
      padding-left 40px
    td
      padding-left 40px

  .box
    padding 20px 0px 20px 20px
    margin 0px 0px 10px 40px
    background-color back_box_grey
    width 280px
    height 100px
    border-radius(5px)
    float left

    .box_headline
      padding 5px 5px 5px 25px
      margin 0px 0px 10px -20px
      background-color background-color

  .dynamic_txt
    padding 4px 6px
    margin-left 5px
    width 30px

  .create_button 
    float left
    padding 4px 6px
    margin 50px 0px 10px 100px
    background linear-gradient(top, #ffbc02,#ff7902);
    border-radius(5px)

  .detail_email
    float left
    margin 50px 0px 0px 40px


 